// Prisma Schema for LatentSEO
// Database: PostgreSQL for production

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ===========================================
// SHOPIFY AUTHENTICATION (Required by Template)
// ===========================================

model Session {
  id                  String    @id
  shop                String
  state               String
  isOnline            Boolean   @default(false)
  scope               String?
  expires             DateTime?
  accessToken         String
  userId              BigInt?
  firstName           String?
  lastName            String?
  email               String?
  accountOwner        Boolean   @default(false)
  locale              String?
  collaborator        Boolean?  @default(false)
  emailVerified       Boolean?  @default(false)
  refreshToken        String?
  refreshTokenExpires DateTime?
}

// ===========================================
// APP-SPECIFIC MODELS
// ===========================================

// Merchant Profile
model Shop {
  id          String   @id @default(uuid())
  shopDomain  String   @unique
  isActive    Boolean  @default(true)
  plan        String   @default("FREE") // FREE, PRO, ENTERPRISE

  // AI Settings
  aiTone      String   @default("PROFESSIONAL") // PROFESSIONAL, FUN, URGENT, LUXURY
  autoPublish Boolean  @default(true)

  // Custom AI Prompt Overrides (Phase 2)
  customMetaTitlePrompt       String?
  customMetaDescriptionPrompt String?
  customAltTextPrompt         String?

  // Notification Preferences (Phase 6)
  notifyOnJobComplete Boolean  @default(true)
  notificationEmail   String?  // Override email for notifications

  // Custom API Key (Phase 6) - encrypted in production
  customGeminiApiKey  String?

  // Exclusion Rules (Phase 6)
  excludedTags        String[] @default([])  // Product tags to skip
  excludedCollections String[] @default([])  // Collection handles to skip

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relationships
  jobs         Job[]
  logs         OptimizationLog[]
  subscription Subscription?
  usageRecords UsageRecord[]
}

// Shopify Subscription Tracking
model Subscription {
  id                    String    @id @default(uuid())
  shopDomain            String    @unique
  shop                  Shop      @relation(fields: [shopDomain], references: [shopDomain])

  // Shopify subscription details
  shopifySubscriptionId String?   @unique // From AppSubscription.id
  shopifyChargeId       String?   // From AppSubscriptionLineItem.id
  status                String    @default("PENDING") // PENDING, ACTIVE, CANCELLED, EXPIRED, FROZEN
  plan                  String    @default("FREE") // FREE, PRO, ENTERPRISE

  // Billing cycle
  currentPeriodStart    DateTime?
  currentPeriodEnd      DateTime?
  trialEndsAt           DateTime?

  // Cancellation
  cancelledAt           DateTime?
  cancellationReason    String?

  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  @@index([status])
}

// Monthly Usage Tracking
model UsageRecord {
  id              String   @id @default(uuid())
  shopDomain      String
  shop            Shop     @relation(fields: [shopDomain], references: [shopDomain])

  // Billing period (YYYY-MM format)
  billingPeriod   String   // e.g., "2025-01"

  // Usage counts
  productsOptimized Int    @default(0)
  metaTitlesGenerated Int  @default(0)
  metaDescriptionsGenerated Int @default(0)
  altTextsGenerated Int    @default(0)
  schemasGenerated  Int    @default(0)

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@unique([shopDomain, billingPeriod])
  @@index([shopDomain])
  @@index([billingPeriod])
}

// Background Job Tracking
model Job {
  id             String    @id @default(uuid())
  shopDomain     String
  shop           Shop      @relation(fields: [shopDomain], references: [shopDomain])

  type           String    // META_DESCRIPTION, SCHEMA_INJECTION, ALT_TEXT
  status         String    @default("PENDING") // PENDING, PROCESSING, COMPLETED, FAILED
  errorMessage   String?

  totalItems     Int       @default(0)
  processedItems Int       @default(0)

  createdAt      DateTime  @default(now())
  completedAt    DateTime?

  logs           OptimizationLog[]

  @@index([shopDomain])
  @@index([status])
}

// Optimization History (for Undo functionality)
model OptimizationLog {
  id           String    @id @default(uuid())
  shopDomain   String
  shop         Shop      @relation(fields: [shopDomain], references: [shopDomain])

  jobId        String?
  job          Job?      @relation(fields: [jobId], references: [id])

  productId    String    // Shopify GID
  productTitle String?   // For display purposes
  field        String    // e.g., "meta_description"

  oldValue     String?
  newValue     String?

  isReverted   Boolean   @default(false)
  revertedAt   DateTime?

  createdAt    DateTime  @default(now())

  @@index([shopDomain])
  @@index([productId])
  @@index([jobId])
}
